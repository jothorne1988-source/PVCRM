{
  "name": "Solar CRM Dev",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/postgres:1": {}
  },
  "forwardPorts": [
    3000,
    5432
  ],
  "postCreateCommand": "pnpm install && npx prisma generate",
  "customizations": {
    "vscode": {
      "extensions": [
        "Prisma.prisma",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
